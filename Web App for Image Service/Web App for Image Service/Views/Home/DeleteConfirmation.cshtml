@model Web_App_for_Image_Service.Models.Picture

@{
    ViewBag.Title = "Delete Confirmation";
}

@{
    ViewData["Title"] = "Are you sure you want to delete this picture?";
}
<div class="text-center">
    <h2>@ViewData["Title"]</h2>
</div>

<div>
    <div class="row">
        <div class="text-center">            
            <img src="@Url.Content(Model.thumbnailPath)" class="img-circle" alt="loading">
            <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => Model.name)</h3>
                    <p>Date: @Html.DisplayFor(modelItem => Model.date)</p>
                    <p></p>
                    <p>
                        <a href="@Url.Action("DeletePicture", "Home", new { originalPath = Model.originalImagePath})"
                           class="btn btn-primary" role="button" style="background-color:red; color:azure">Delete</a>
                        <a href="@Url.Action("Photos", "Home", new { srcPath = Model.thumbnailPath})"
                           class="btn btn-primary" role="button" style="background-color:cornflowerblue; color:azure">Cancel</a>
                    </p>
            </div>    
        </div>
    </div>
</div>
