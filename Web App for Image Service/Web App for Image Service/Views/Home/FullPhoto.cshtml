@model Web_App_for_Image_Service.Models.Picture

@{
    ViewBag.Title = Model.name;
}

<div>
    <div class="row">
        <div class="text-center">
            <img src="@Url.Content(Model.originalImagePath)" alt="loading">
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => Model.name)</h3>
                <p>Date: @Html.DisplayFor(modelItem => Model.date)</p>
                <p></p>
                <p>
                    <a href="@Url.Action("DeleteConfirmation", "Home", new { srcPath = Model.originalImagePath})"
                       class="btn btn-primary" role="button" style="background-color:red; color:azure">Delete</a>
                    <a href="@Url.Action("Photos", "Home", new { srcPath = Model.originalImagePath})"
                       class="btn btn-primary" role="button" style="background-color:cornflowerblue; color:azure">Back to Photos</a>
                </p>
            </div>
        </div>
    </div>
</div>