@model Web_App_for_Image_Service.Models.ConfigModel

@{
    ViewBag.Title = "Confirmation";
}

@{
    ViewData["Title"] = "Are you sure you want to remove this directory?";
}
<div class="text-center">
    <h2>@ViewData["Title"]</h2>
</div>
<div>
    <div class="row">
        <div class="text-center">
            <div class="caption">
                <h3>@Model.selectedHandler</h3>
                <p></p>
                <p>
                    <a href="@Url.Action("RemoveHandler", "Home", new { handlerPath = @Model.selectedHandler})"
                       class="btn btn-primary" role="button" style="background-color:red; color:azure" 
                       @{ if(Model.enabled == false) { 
                              @:disabled="disabled" 
                          }
                       } >Remove</a>
                    <a href="@Url.Action("RemoveHandler", "Home", new { handlerPath =""})"
                       class="btn btn-primary" role="button" style="background-color:cornflowerblue; color:azure"
                       @{ if(Model.enabled == false) { 
                              @:disabled="disabled" 
                          }
                       } >Back to Handlers</a>
                </p>
            </div>
        </div>
    </div>
</div>