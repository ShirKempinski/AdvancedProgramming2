@model string

@{
    ViewBag.Title = "Confirmation";
}

<div>
    <div class="row">
        <div class="text-center">
            <div class="caption">
                <h3><strong>Remove:</strong></h3>
                <h3>@Model</h3>
                <p></p>
                <p>
                    <a href="@Url.Action("RemoveHandler", "Home", new { handlerPath = @Model})"
                       class="btn btn-primary" role="button" style="background-color:red; color:azure">Remove</a>
                    <a href="@Url.Action("RemoveHandler", "Home", new { handlerPath =""})"
                       class="btn btn-primary" role="button" style="background-color:cornflowerblue; color:azure">Back to Handlers</a>
                </p>
            </div>
        </div>
    </div>
</div>