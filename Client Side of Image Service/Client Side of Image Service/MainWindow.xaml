<Window x:Class="Client_Side_of_Image_Service.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Side_of_Image_Service"
        mc:Ignorable="d"
        Background="{Binding Path=background}"
        Title="Image Service" Height="450" Width="800">
    <TabControl HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="800" Background="{Binding Path=background}">
        <TabItem Header="Settings">
            <local:SettingsPage/>
        </TabItem>
        <TabItem Header="Logs">
            <Grid>
                <local:LogPage Grid.Row="1" DataContext="{Binding LogViewModel}" Height="300"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
