<UserControl x:Class="Client_Side_of_Image_Service.LogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client_Side_of_Image_Service"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <local:StatusToColorConverter x:Key="converter"/>
    </UserControl.Resources>
    <Border Grid.Row="1">
        <DataGrid x:Name="logsBox"
             ItemsSource="{Binding logList}"
             Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Status" Width="125" Binding="{Binding status, Mode=OneWay}" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Background" Value="{Binding Path=status, Mode=OneWay, Converter={StaticResource converter}}"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Message" Width="*" Binding="{Binding message, Mode=OneWay}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Border>
</UserControl>
